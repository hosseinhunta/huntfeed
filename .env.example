# HuntFeed Environment Configuration
# Copy this file to .env and configure according to your setup

# Application Settings
APP_NAME=HuntFeed
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=UTC

# Feed Fetcher Settings
FEED_VERIFY_SSL=true
FEED_TIMEOUT=30
FEED_MAX_REDIRECTS=5
FEED_USER_AGENT=HuntFeed/1.0

# WebSub (PubSubHubbub) Settings
WEBSUB_ENABLED=true
WEBSUB_CALLBACK_URL=https://your-domain.com/callback.php
WEBSUB_AUTO_SUBSCRIBE=true
WEBSUB_FALLBACK_POLLING=true
WEBSUB_LEASE_SECONDS=86400

# Database (Optional - for subscription persistence)
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=huntfeed
# DB_USERNAME=root
# DB_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_PATH=logs/

# Security
HTTPS_REQUIRED=true
SECRET_KEY=generate_a_secure_key_here
